<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AddressActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_default"
        android:layout_marginHorizontal="@dimen/common_margin_default"
        android:text="@string/direccion_cliente"
        android:textColor="#4209E8"
        android:textSize="24sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_height_default"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="@dimen/common_image_middle"
        android:layout_height="@dimen/common_image_middle"
        android:layout_marginHorizontal="@dimen/common_margin_default"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/imagen_del_cliente"
        android:src="@android:drawable/btn_star_big_on"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin_min"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textColor="#333"/>

    <TextView
        android:id="@+id/tvAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin_min"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textColor="#333"/>

    <TextView
        android:id="@+id/tvAddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin_min"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textColor="#333"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>